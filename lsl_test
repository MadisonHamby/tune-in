"""Example program to show how to read a multi-channel time series from LSL."""

from pylsl import StreamInlet, resolve_stream
# type this command  muse-io --lsl-eeg EEG
# muse-io --lsl-eeg EEG --osc-eeg-path /muse/elements/beta_absolute

def main():
    # first resolve an EEG stream on the lab network
    print("looking for an EEG stream...")
    # streams = resolve_stream('name', '/muse/elements/beta_absolute')

    streams = resolve_stream('type', "EEG")  # displays raw data in micro volts for each sensor
    # EEG Example
    # -470.672288 [858.6797485351562, 807.6853637695312, 80.60403442382812, 814.2652587890625, 1.5574865185351983e-37,
    # 1.1370764900378694e+23]

    # create a new inlet to read from the stream
    inlet = StreamInlet(streams[0])

    while True:
        # get a new sample (you can also omit the timestamp part if you're not
        # interested in it)
        sample, timestamp = inlet.pull_sample()
        print(timestamp, sample)


if __name__ == '__main__':
    main()